
@{
    ViewBag.Title = "BsktDetials";
}


    <div class=" container">
        <h2>Order Details</h2>

        <dl class="dl-horizontal">
            <dt>
                Order Number
            </dt>
            <dd>
                @ViewBag.History_basket.Id
            </dd>
            <dt>
                Total Price
            <dt>
            <dd>
                @ViewBag.History_basket.SumPrice
            </dd>
        </dl>

        <table class="table">
            <tr>
                <th>
                    Item Name
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Price
                </th>
            </tr>
            @foreach (var theItem in ViewBag.ItemsInThisBasket)
            {
                <tr>
                    <td>
                        @theItem.Product_name
                    </td>
                    <td>
                        @theItem.Quantity
                    </td>
                    <td>
                        @theItem.TotalPrice
                    </td>
                </tr>
            }
        </table>

        <div class="form-actions no-color">
            @Html.ActionLink("Back To List", "TradeHistory")
        </div>
</div>
