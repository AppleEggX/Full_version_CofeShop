@model IEnumerable<CofeWebApplication.ServiceReference1.BasketDTO>

@{
    //ViewBag.itemInbasket = InBasketItems;
}

<div class="jumbotron-fluid">
    <h2 class="text-center" style="color:antiquewhite; text-shadow: 2px 2px 10px #000000; padding-top: 75px; font-size: 3.3vw">My Mug</h2>
</div>

<div class=" container" style="padding-top:50px;">


    <table class="table">
        <tr>
            <th>

            </th>
            <th>
                Item Name
            </th>
            <th>
                Quantity
            </th>
            <th>
                Price
            </th>
        </tr>
        @foreach (var item in ViewBag.items)
        {
            <tr>
                <td>
                    <img src="~/Content/Image/product-01.jpg"
                </td>
                <td style="padding-top: 100px">
                    @item.Product_name
                </td>
                <td style="padding-top: 100px">
                    @item.Quantity
                </td>
                <td style="padding-top: 100px">
                    @item.TotalPrice
                </td>
                <td style="padding-top: 100px">
                    @Html.ActionLink("Edit", "Edit", new { id = item.BasketItemId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.BasketItemId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.BasketItemId })
                </td>
            </tr>
        }
    </table>

    <div class=" float-right">
        <dl class="dl-horizontal">
            <dt>
                Total Price
            <dt>
            <dd>
                @Html.DisplayFor(model => model.First().SumPrice)
            </dd>
        </dl>

        <div class="btn hvr-hover"> @Html.ActionLink("Check Out", "Checkout", new { id = Model.First().Id })</div>
    </div>
</div>
