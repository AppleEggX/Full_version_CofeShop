@model CofeWebApplication.Models.CoffeeViewModel
@{
    ViewBag.Title = "AddToBasket";
}
<div class="jumbotron-fluid">
    <h2 class="text-center" style="color:antiquewhite; text-shadow: 2px 2px 15px #000000; padding-top: 25px; font-size: 3.3vw">Add to Mug</h2>
    <h3 class="text-center" style="color:antiquewhite; text-shadow: 2px 2px 10px #000000;"> @ViewBag.coffeeInfo.Name </h3>
</div>
<div class="container" style="padding-top: 50px;">
    <h4 style=" font-size:2.3vw" >Just a few more steps to get your delicious C#ffee...</h4>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <dl class="dl-horizontal">
                <dt>
                    <span style=" font-size:1.9vw">  Name </span>
</dt>

                <dd>
                    <span style=" font-size:1.9vw"> @ViewBag.coffeeInfo.Name </span>
</dd>

                <dt>
                    <span style=" font-size:1.9vw"> Price</span>
                </dt>

                <dd>
                    <span style=" font-size:2.3vw"> £@ViewBag.coffeeInfo.Price </span>
                </dd>
                @*@using (Html.BeginForm("AddToBasketConfirmed", FormMethod.Post))
                    {*@
                <div class="form-group">

                </div>
                @*}*@

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div>
                   <span style=" font-size:1.9vw"> @Html.Editor("Quantity") <br /> </span>
                </div>
                <div class="form-actions no-color">
                    <input type="submit" value="Add To Mug" class="btn btn-default" style=" font-size:1.9vw"/> |
                   <span style=" font-size:1.9vw"> @Html.ActionLink("Back to List", "Index") </span>
                </div>
            }
        </div>
        <div class=" col-md-4">
            <img src="~/Content/Image/AddToMug.jpg" />
        </div>
    </div>
</div>